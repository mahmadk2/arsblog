<h1 align="center" > hello login</h1>
<div class="row">
<div class="container offset-3">
 <div class="form-group">
	<%= form_for :session do |f| %>
	<div class="col-4">
   <%= f.label :email%>
 </div>
 <div class="col-8">
   <%= f.email_field :email, class:"form-control is-valid", placeholder:"email address" %>
   <div class="valid-feedback">Enter Email As Username</div>
 </div>

 <div class="col-sm-4">
   <%= f.label :password%>
 </div>
 <div class="col-sm-8">
   <%= f.password_field :password, class:"form-control is-valid", placeholder:"password" %>
   <div class="valid-feedback">Enter password</div>
 </div>
 <div class="col-sm-4 offset-3">
   <%= f.submit 'LOGIN',class:"btn btn-primary" %>
 </div>
</div>
	<%end%>
</div>
</div>