<ul>
<% @article.errors.full_messages.each do |msg| %>

<li><%= msg %></li>

<%end%>
</ul>
<%end%>

<%= form_for @article do |f| %>

<p>
<%=f.label :title%>
</p>
<p>
<%=f.text_field :title%>
</p>

<p>
<%=f.label :discription%>
</p>
<p>
<%=f.text_area :discription%>
</p>

<p>
<%=f.submit%>
</p>


<%end%>


