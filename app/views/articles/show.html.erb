<h1 align="center"> Show the Article</h1>
<div class="container">
<div class="card text-center">
<div class="card-header bg-danger">
<%= @article.title %>
</div>

<div class="card-body">
<h5 class="card-title">Discription</h5>
<p class="card-text"><%=@article.discription%>
</p>
</div>
<div class="card-footer text-muted bg-success">
    <%= link_to "Edit", edit_article_path(@article), class:"btn btn-primary" %>
    

    <%= link_to "delete", article_path(@article), method: :delete, data:{confirm:"are you sure to delete this"}, class:"btn btn-danger" %>
    <%=link_to "All articles", articles_path, class: "btn btn-success"%>
    
  </div>
</div>
</div>
